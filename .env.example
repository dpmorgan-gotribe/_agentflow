# =============================================================================
# Aigentflow Environment Configuration
#
# Copy this file to .env and configure values for your environment.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------

# Connection URL (constructed from components below, or set directly)
DATABASE_URL=postgresql://aigentflow:your-secure-password@localhost:5432/aigentflow

# Docker Compose configuration
POSTGRES_USER=aigentflow
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=aigentflow
POSTGRES_PORT=5432

# Adminer (database UI) port
ADMINER_PORT=8080

# -----------------------------------------------------------------------------
# Vector Database
# -----------------------------------------------------------------------------
QDRANT_URL=http://localhost:6333

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Node environment
NODE_ENV=development
LOG_LEVEL=debug

# API Server
API_PORT=3000
API_HOST=0.0.0.0

# -----------------------------------------------------------------------------
# AI Providers
# -----------------------------------------------------------------------------

# Anthropic API key (required for API mode)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (optional, for embeddings)
OPENAI_API_KEY=sk-...

# Use Claude CLI instead of API (set to 'true' for local development)
CLAUDE_CLI=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------

# JWT secret for authentication (generate with: openssl rand -base64 32)
# JWT_SECRET=your-jwt-secret-here

# Session secret (generate with: openssl rand -base64 32)
# SESSION_SECRET=your-session-secret-here
