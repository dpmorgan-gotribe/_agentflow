{
  "name": "@aigentflow/hooks",
  "version": "0.0.0",
  "description": "Hooks and guardrails system for Aigentflow",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./guardrails": {
      "import": "./dist/guardrails/index.js",
      "types": "./dist/guardrails/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/hooks/index.ts src/guardrails/index.ts --format esm --dts",
    "dev": "tsup src/index.ts src/hooks/index.ts src/guardrails/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@aigentflow/tsconfig": "workspace:*",
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
