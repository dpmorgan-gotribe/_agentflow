{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "tsc",
    "watchOptions": {
      "ignored": [
        "**/node_modules/**",
        "**/.aigentflow/**",
        "**/dist/**",
        "**/.git/**"
      ]
    }
  }
}
