{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "security-output",
  "title": "Security Agent Output",
  "description": "Schema for security agent audit output",
  "type": "object",
  "required": ["summary", "riskLevel", "approved", "vulnerabilities", "compliance"],
  "properties": {
    "summary": {
      "type": "string",
      "description": "Overall security assessment"
    },
    "riskLevel": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low", "none"]
    },
    "approved": {
      "type": "boolean"
    },
    "vulnerabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "severity", "type", "location", "description", "remediation"],
        "properties": {
          "id": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "type": {
            "type": "string",
            "description": "OWASP category or CWE identifier"
          },
          "location": {
            "type": "object",
            "required": ["file"],
            "properties": {
              "file": { "type": "string" },
              "line": { "type": "integer" },
              "function": { "type": "string" }
            }
          },
          "description": {
            "type": "string"
          },
          "impact": {
            "type": "string"
          },
          "remediation": {
            "type": "object",
            "required": ["description"],
            "properties": {
              "description": { "type": "string" },
              "code": { "type": "string" }
            }
          },
          "references": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "compliance": {
      "type": "object",
      "properties": {
        "rls": {
          "type": "object",
          "properties": {
            "compliant": { "type": "boolean" },
            "violations": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "authentication": {
          "type": "object",
          "properties": {
            "compliant": { "type": "boolean" },
            "issues": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "inputValidation": {
          "type": "object",
          "properties": {
            "compliant": { "type": "boolean" },
            "unvalidatedInputs": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "auditLogging": {
          "type": "object",
          "properties": {
            "adequate": { "type": "boolean" },
            "gaps": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "secretsExposure": {
      "type": "object",
      "properties": {
        "found": { "type": "boolean" },
        "secrets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "location": { "type": "string" },
              "severity": { "type": "string" }
            }
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "vulnerablePackages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "package": { "type": "string" },
              "version": { "type": "string" },
              "vulnerability": { "type": "string" },
              "severity": { "type": "string" },
              "fixVersion": { "type": "string" }
            }
          }
        }
      }
    },
    "blockers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["issue", "reason"],
        "properties": {
          "issue": { "type": "string" },
          "location": { "type": "string" },
          "reason": { "type": "string" }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "description": { "type": "string" },
          "rationale": { "type": "string" }
        }
      }
    }
  }
}
